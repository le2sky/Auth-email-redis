{
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      {
        "include": "./config/env/*.env",
        "outDir": "./dist"
      },
      {
        "include": "./templates/*.hbs",
        "outDir": "./dist"
      },
      {
        "include": "./templates/*.css",
        "outDir": "./dist"
      }
    ],
    "watchAssets": true
  }
}
